{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subscriptionId": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "allowedLocations": {
      "type": "array"
    },
    "allowedVmSizes": {
      "type": "array"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "LighthouseOnboarding",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'nestedtemplates/marketplaceDelegatedResourceManagement.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "customerTenantId": {
            "value": "[subscription().tenantId]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "DeployPolicies",
      "dependsOn": [
        "LighthouseOnboarding"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'nestedtemplates/deployPolicies.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "subscriptionId": {
            "value": "[parameters('subscriptionId')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "allowedLocations": {
            "value": "[parameters('allowedLocations')]"
          },
          "allowedVmSizes": {
            "value": "[parameters('allowedVmSizes')]"
          }
        }
      }
    }
  ]
}
